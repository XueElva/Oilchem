<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="OilDaytime" >
	    <item name="oil_text_color">@color/oil_text_color_day</item>
	    <item name="oil_background_color">@color/oil_background_color_day</item>
	</style>
	<style name="OilNighttime" >
	    <item name="oil_text_color">@color/oil_text_color_night</item>
	    <item name="oil_background_color">@color/oil_background_color_night</item>
	</style>
	<style name="oil_theme">
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:background">@android:color/white</item>
	</style>
	<style name="oil_setting">
	    <item name="android:textColor">#6a6a6a</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:background">@android:color/white</item>
	</style>
	<style name="oil_setting_black">
	    <item name="android:textColor">@android:color/black</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:background">@android:color/white</item>
	</style>
	
    <style name="OilDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
